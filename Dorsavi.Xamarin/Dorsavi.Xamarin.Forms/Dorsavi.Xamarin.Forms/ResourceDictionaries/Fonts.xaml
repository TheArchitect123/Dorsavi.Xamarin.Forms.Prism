<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <OnPlatform x:TypeArguments="x:String" x:Key="FontFamily.RobotoThin">
        <On Platform="Android" Value="Roboto-Thin.ttf#Roboto-Thin" />
        <On Platform="UWP" Value="/Fonts/Roboto-Thin.ttf#Roboto-Thin" />
        <On Platform="iOS" Value="Roboto-Thin" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:String" x:Key="FontFamily.RobotoLight">
        <On Platform="Android" Value="Roboto-Light.ttf#Roboto-Light" />
        <On Platform="UWP" Value="/Fonts/Roboto-Light.ttf#Roboto-Light" />
        <On Platform="iOS" Value="Roboto-Light" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:String" x:Key="FontFamily.RobotoRegular">
        <On Platform="Android" Value="Roboto-Regular.ttf#Roboto-Regular" />
        <On Platform="UWP" Value="/Fonts/Roboto-Regular.ttf#Roboto-Regular" />
        <On Platform="iOS" Value="Roboto-Regular" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:String" x:Key="FontFamily.RobotoBold">
        <On Platform="Android" Value="Roboto-Bold.ttf#Roboto-Bold" />
        <On Platform="UWP" Value="/Fonts/Roboto-Bold.ttf#Roboto-Bold" />
        <On Platform="iOS" Value="Roboto-Bold" />
    </OnPlatform>

</ResourceDictionary>
